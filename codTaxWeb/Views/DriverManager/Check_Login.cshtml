
@{
    ViewBag.Title = "Check_Login";
    Layout = "~/Views/Shared/_NoLayout.cshtml";
}

<div id="wrap" class="loginWrap ">
    <div id="container" class="container">
        <div id="contents" class="contents">
            <div class="loginArea">
                <h1>COD Truck 로그인</h1>
                <div class="loginForm">
                    <p class="desc">세금계산서 발급을 위해 로그인하세요.</p>
                    <fieldset>
                        <ul>
                            <li>
                                <label for="phone_no" class="blind">전화번호</label><input type="text" value="" name="phone_no" id="phone_no" onchange="getOnlyNumber(this);" onkeyup="getOnlyNumber(this);" class="fText w100per" maxlength="11" placeholder="전화번호입력" />
                            </li>
                            <li class="error">
                                <label for="birth_day" class="blind">생년월일</label><input type="password" value="" name="birth_day" id="birth_day" onchange="getOnlyNumber(this);" onkeyup="getOnlyNumber(this);" class="fText w100per" maxlength="6" placeholder="생년월일입력" />
                            </li>
                        </ul>
                        <p class="txtWarn" id="err_area" style="display:none;"></p>
                        <a href="#" class="btnSubmit" id="btnLogin">로그인</a>
                    </fieldset>
                </div>
            </div>
        </div>
    </div>

    <hr class="layout" />
</div>

<script src="~/Views/DriverManager/Check_Login.js?version=0.1"></script>